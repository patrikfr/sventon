<select class="sventonSelect" name="charsetSelect" onchange="javascript:document.location.href += '&charset=' + this.form.charsetSelect.options[selectedIndex].value;">
  <c:forEach items="${charsets}" var="charset">
    <option ${userContext.charset eq charset ? 'selected' : ''} value="${charset}">${charset}</option>
  </c:forEach>
</select>