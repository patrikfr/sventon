  <th><a href="${sortUrl}&sortType=REVISION&sortMode=${opositeSortType}" style="color: #000000;">
    <c:if test="${userContext.sortType eq 'REVISION'}"><img alt="${userContext.sortType}" src="images/${sortModeArrow}"/></c:if>Revision</a>
  </th>
  <th><a href="${sortUrl}&sortType=AUTHOR&sortMode=${opositeSortType}" style="color: #000000;">
    <c:if test="${userContext.sortType eq 'AUTHOR'}"><img alt="${userContext.sortType}" src="images/${sortModeArrow}"/></c:if>Author</a>
