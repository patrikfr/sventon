<tr>
  <th></th>
  <th></th>

  <c:set var="sortModeArrow" value="${userContext.sortMode eq 'ASC' ? 'icon_up.gif;' : 'icon_down.gif'}"/>
  <c:set var="opositeSortType" value="${userContext.sortMode eq 'ASC' ? 'DESC' : 'ASC'}"/>

